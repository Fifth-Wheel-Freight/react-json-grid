{
  "compilerOptions": {
    "target": "esnext",                         
    "lib": ["dom", "esnext"], 
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "allowJs": true,                          
    "skipLibCheck": true,                     
    "esModuleInterop": true,                  
    "allowSyntheticDefaultImports": true,     
    "strict": true,                           
    "forceConsistentCasingInFileNames": true, 
    "module": "esnext",                       
    "moduleResolution": "node",               
    "resolveJsonModule": true,                
    "isolatedModules": true,                  
    "jsx": "react"
  },

  "exclude": [
    "node_modules",
    "dist",
    "demo",
    "rollup.config.js",
  ]
}